{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "paths": {
            "bo@/*": ["resources/backoffice/js/*"],
            "s@/*": ["resources/website/js/*"]
        },
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        /* Allow for Vue files */
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        /* Include these libraries to ensure DOM and ES features work */
        "lib": [
            "dom",
            "esnext"
        ]
    },
    "include": [
        "resources/backoffice/js/**/*.ts",
        "resources/backoffice/js/**/*.tsx",
        "resources/backoffice/js/**/*.vue",
        "resources/website/js/**/*.ts",
        "resources/website/js/**/*.tsx",
        "resources/website/js/**/*.vue"
        // This line ensures .vue files are included
    ]
}
